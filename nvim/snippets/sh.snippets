snippet !args "args"
  while [[ $# -gt 0 ]]; do
    case \$1 in
      -$1|--$2)
        ${3:echo \$2 # print value}
        shift
        shift
        ;;
      -*|--*)
        echo "Unknown option \$1"
        exit 1
        ;;
      *)
        shift
        ;;
    esac
  done

snippet if
  if [$1]; then
    $2
  fi
