exec --no-startup-id setxkbmap -option caps:escape &

# Bar
exec_always --no-startup-id ~/bin/launch-polybar

# Music
exec --no-startup-id nohup mopidy > ~/.nohup
exec --no-startup-id while :; do; yes $’\n’ | nc -lu 127.0.0.1 5555 > /tmp/mpd.fifo; done &

exec --no-startup-id fcitx

# notifications
exec killall -q notify-osd
exec --no-startup-id dunst

